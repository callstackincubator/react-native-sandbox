{
  "name": "@callstack/react-native-sandbox",
  "version": "0.4.0",
  "description": "A component to run multiple React Native instances side-by-side.",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "author": "Aliaksandr Babrykovich <aliaksandr.babrykovich@callstack.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/callstackincubator/react-native-sandbox"
  },
  "homepage": "https://github.com/callstackincubator/react-native-sandbox#readme",
  "keywords": [
    "react-native",
    "security",
    "sandbox",
    "isolation"
  ],
  "files": [
    "src",
    "ios",
    "android",
    "specs",
    "React-Sandbox.podspec"
  ],
  "scripts": {
    "lint": "clang-format --dry-run --Werror ios/*.{h,mm,cpp} tests/*.{h,cpp}",
    "format": "clang-format -i ios/*.{h,mm,cpp} tests/*.{h,cpp}",
    "typecheck": "tsc --noEmit",
    "prepare": "bob build",
    "ctest": "cmake -S tests -B tests/build && cmake --build tests/build && ctest --test-dir tests/build --output-on-failure --verbose"
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "react": "19.1.0",
    "react-native": "0.80.1"
  },
  "codegenConfig": {
    "name": "RNSandboxSpec",
    "type": "components",
    "jsSrcsDir": "specs",
    "android": {
      "javaPackageName": "io.callstack.rnsandbox"
    },
    "ios": {
      "componentProvider": {
        "SandboxReactNativeView": "SandboxReactNativeViewComponentView"
      }
    }
  }
}